@model Xv.Blog.Web.Controllers.PostViewModel

@{
    ViewBag.Title = "Create Post";
    var dateval = (Model.Form.PublishedDate ?? DateTime.UtcNow).ToShortDateString();
}

<h2>Create Post</h2>
@if (ViewBag.StatusMessage != null)
{
    <p class="bg-primary">@ViewBag.StatusMessage</p>
}
<form role="form" method="post">
    <div class="form-group">
        <label>Title</label>
        @Html.TextBoxFor(model => model.Form.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Category</label>
        @Html.DropDownListFor(model => model.Form.CategoryId, new SelectList(Model.Categories, "Id", "Name"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Body</label>
        @Html.TextAreaFor(model => model.Form.Body, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Publish Date</label>
        <input type="date" name="Form.PublishedDate" class="form-control" value="@dateval" />
    </div>
    


    <button type="submit" class="btn btn-default">Submit</button>
</form>